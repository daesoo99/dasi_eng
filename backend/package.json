{
  "name": "dasi-backend",
  "version": "1.0.0",
  "description": "Backend for DaSi English Speaking Learning App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/server-v2.ts",
    "dev:legacy": "node src/server.js",
    "dev:old": "node src/server.js",
    "build": "tsc",
    "start": "npm run build && node dist/server-v2.js",
    "start:dev": "ts-node src/server-v2.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.{ts,js}' --coverageReporters=text-lcov",
    "test:contracts": "jest __tests__/contracts",
    "test:integration": "jest __tests__/integration",
    "test:security": "jest __tests__/security",
    "test:all": "npm run test && npm run test:contracts && npm run test:integration && npm run test:security",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "curriculum": "ts-node src/tools/curriculum-generator.ts",
    "curriculum:generate": "npm run curriculum generate",
    "curriculum:validate": "npm run curriculum validate", 
    "curriculum:batch": "npm run curriculum batch",
    "curriculum:test": "npm run curriculum test"
  },
  "keywords": [
    "node.js",
    "express",
    "firebase",
    "firestore",
    "gemini-api",
    "fcm"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@google/generative-ai": "^0.15.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "lru-cache": "^11.1.0",
    "node-fetch": "^3.3.2",
    "on-finished": "^2.4.1",
    "p-queue": "^8.1.0",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "prom-client": "^15.1.3",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/on-finished": "^2.3.5",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

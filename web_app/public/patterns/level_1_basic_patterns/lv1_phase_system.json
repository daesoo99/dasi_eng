{
  "level_1_phase_system": {
    "title": "Level 1 - 구조 패턴 중심 스테이지 구성",
    "description": "영어 문장의 기본 뼈대를 단계별로 습득하는 구조화된 학습 시스템",
    "total_phases": 5,
    
    "phase_1": {
      "title": "문장 뼈대 - Be 동사 완전 정복",
      "description": "영어 문장의 가장 기본인 Be 동사 시제별 완전 학습",
      "stages": 3,
      "grammar_focus": "Be 동사의 시제별 활용과 주어-동사 일치",
      
      "stage_1": {
        "title": "Be 동사 현재형",
        "pattern": "주어 + am/is/are + 보어",
        "key_structures": [
          "I am + [명사/형용사]",
          "You are + [명사/형용사]", 
          "He/She/It is + [명사/형용사]",
          "We/They are + [명사/형용사]"
        ],
        "practice_sentences": [
          {"en": "I am a student", "ko": "나는 학생이다"},
          {"en": "You are my friend", "ko": "너는 내 친구다"},
          {"en": "He is a teacher", "ko": "그는 선생님이다"},
          {"en": "She is beautiful", "ko": "그녀는 아름답다"},
          {"en": "It is a book", "ko": "그것은 책이다"},
          {"en": "We are happy", "ko": "우리는 행복하다"},
          {"en": "They are students", "ko": "그들은 학생들이다"}
        ]
      },
      
      "stage_2": {
        "title": "Be 동사 과거형",
        "pattern": "주어 + was/were + 보어",
        "key_structures": [
          "I/He/She/It was + [명사/형용사]",
          "You/We/They were + [명사/형용사]"
        ],
        "practice_sentences": [
          {"en": "I was tired yesterday", "ko": "나는 어제 피곤했다"},
          {"en": "You were late", "ko": "너는 늦었다"},
          {"en": "He was a doctor", "ko": "그는 의사였다"},
          {"en": "She was at home", "ko": "그녀는 집에 있었다"},
          {"en": "It was cold", "ko": "추웠다"},
          {"en": "We were busy", "ko": "우리는 바빴다"},
          {"en": "They were friends", "ko": "그들은 친구들이었다"}
        ]
      },
      
      "stage_3": {
        "title": "Be 동사 미래형",
        "pattern": "주어 + will be + 보어",
        "key_structures": [
          "I will be + [명사/형용사]",
          "You will be + [명사/형용사]",
          "He/She/It will be + [명사/형용사]",
          "We/They will be + [명사/형용사]"
        ],
        "practice_sentences": [
          {"en": "I will be a doctor", "ko": "나는 의사가 될 것이다"},
          {"en": "You will be happy", "ko": "너는 행복할 것이다"},
          {"en": "He will be here", "ko": "그는 여기에 있을 것이다"},
          {"en": "She will be late", "ko": "그녀는 늦을 것이다"},
          {"en": "It will be sunny", "ko": "날씨가 맑을 것이다"},
          {"en": "We will be ready", "ko": "우리는 준비될 것이다"},
          {"en": "They will be students", "ko": "그들은 학생이 될 것이다"}
        ]
      }
    },
    
    "phase_2": {
      "title": "일반동사 기본 - 행동과 상태 표현",
      "description": "일반동사를 사용한 기본적인 행동과 상태 표현 학습",
      "stages": 3,
      "grammar_focus": "일반동사의 시제별 활용과 3인칭 단수",
      
      "stage_4": {
        "title": "일반동사 현재형",
        "pattern": "주어 + 동사(s) + 목적어",
        "key_structures": [
          "I/You/We/They + [동사원형]",
          "He/She/It + [동사+s/es]"
        ],
        "practice_sentences": [
          {"en": "I play soccer", "ko": "나는 축구를 한다"},
          {"en": "You like music", "ko": "너는 음악을 좋아한다"},
          {"en": "He eats breakfast", "ko": "그는 아침을 먹는다"},
          {"en": "She watches TV", "ko": "그녀는 TV를 본다"},
          {"en": "It runs fast", "ko": "그것은 빨리 달린다"},
          {"en": "We study English", "ko": "우리는 영어를 공부한다"},
          {"en": "They work hard", "ko": "그들은 열심히 일한다"}
        ]
      },
      
      "stage_5": {
        "title": "일반동사 과거형",
        "pattern": "주어 + 동사ed/불규칙과거형 + 목적어",
        "key_structures": [
          "주어 + [규칙동사+ed] (played, worked, liked)",
          "주어 + [불규칙동사 과거형] (went, came, ate)"
        ],
        "practice_sentences": [
          {"en": "I played soccer yesterday", "ko": "나는 어제 축구를 했다"},
          {"en": "You liked the movie", "ko": "너는 그 영화를 좋아했다"},
          {"en": "He ate lunch", "ko": "그는 점심을 먹었다"},
          {"en": "She watched TV", "ko": "그녀는 TV를 봤다"},
          {"en": "It ran fast", "ko": "그것은 빨리 달렸다"},
          {"en": "We studied English", "ko": "우리는 영어를 공부했다"},
          {"en": "They worked hard", "ko": "그들은 열심히 일했다"}
        ]
      },
      
      "stage_6": {
        "title": "일반동사 미래형 (will)",
        "pattern": "주어 + will + 동사원형 + 목적어",
        "key_structures": [
          "I will + [동사원형]",
          "You will + [동사원형]",
          "He/She/It will + [동사원형]",
          "We/They will + [동사원형]"
        ],
        "practice_sentences": [
          {"en": "I will go to school", "ko": "나는 학교에 갈 것이다"},
          {"en": "You will eat dinner", "ko": "너는 저녁을 먹을 것이다"},
          {"en": "He will play basketball", "ko": "그는 농구를 할 것이다"},
          {"en": "She will watch a movie", "ko": "그녀는 영화를 볼 것이다"},
          {"en": "It will rain tomorrow", "ko": "내일 비가 올 것이다"},
          {"en": "We will study together", "ko": "우리는 함께 공부할 것이다"},
          {"en": "They will work late", "ko": "그들은 늦게 일할 것이다"}
        ]
      }
    },
    
    "phase_3": {
      "title": "부정문 - '아니다'의 다양한 표현",
      "description": "Be 동사와 일반동사의 부정문 형태 학습",
      "stages": 2,
      "grammar_focus": "부정문의 구조와 축약형 활용",
      
      "stage_7": {
        "title": "Be 동사 부정문",
        "pattern": "주어 + be동사 + not + 보어",
        "key_structures": [
          "I am not = I'm not",
          "You are not = You aren't",
          "He/She/It is not = He/She/It isn't",
          "We/They are not = We/They aren't"
        ],
        "practice_sentences": [
          {"en": "I'm not a teacher", "ko": "나는 선생님이 아니다"},
          {"en": "You aren't late", "ko": "너는 늦지 않았다"},
          {"en": "He isn't here", "ko": "그는 여기에 없다"},
          {"en": "She isn't happy", "ko": "그녀는 행복하지 않다"},
          {"en": "It isn't cold", "ko": "춥지 않다"},
          {"en": "We aren't busy", "ko": "우리는 바쁘지 않다"},
          {"en": "They aren't students", "ko": "그들은 학생이 아니다"}
        ]
      },
      
      "stage_8": {
        "title": "일반동사 부정문",
        "pattern": "주어 + don't/doesn't + 동사원형",
        "key_structures": [
          "I/You/We/They don't + [동사원형]",
          "He/She/It doesn't + [동사원형]"
        ],
        "practice_sentences": [
          {"en": "I don't like coffee", "ko": "나는 커피를 좋아하지 않는다"},
          {"en": "You don't play soccer", "ko": "너는 축구를 하지 않는다"},
          {"en": "He doesn't eat meat", "ko": "그는 고기를 먹지 않는다"},
          {"en": "She doesn't watch TV", "ko": "그녀는 TV를 보지 않는다"},
          {"en": "It doesn't work", "ko": "그것은 작동하지 않는다"},
          {"en": "We don't study on Sunday", "ko": "우리는 일요일에 공부하지 않는다"},
          {"en": "They don't work here", "ko": "그들은 여기서 일하지 않는다"}
        ]
      }
    },
    
    "phase_4": {
      "title": "의문문 - 질문하기의 기본",
      "description": "Yes/No 질문과 Wh- 질문의 기본 형태 학습",
      "stages": 3,
      "grammar_focus": "의문문의 어순과 응답 방법",
      
      "stage_9": {
        "title": "Be 동사 의문문",
        "pattern": "Be동사 + 주어 + 보어?",
        "key_structures": [
          "Am I + [보어]?",
          "Are you + [보어]?",
          "Is he/she/it + [보어]?",
          "Are we/they + [보어]?"
        ],
        "practice_sentences": [
          {"en": "Are you a student?", "ko": "너는 학생이니?"},
          {"en": "Is he at home?", "ko": "그는 집에 있니?"},
          {"en": "Is she happy?", "ko": "그녀는 행복하니?"},
          {"en": "Is it cold today?", "ko": "오늘 추우니?"},
          {"en": "Are we late?", "ko": "우리가 늦었니?"},
          {"en": "Are they friends?", "ko": "그들은 친구니?"},
          {"en": "Am I right?", "ko": "내가 맞니?"}
        ]
      },
      
      "stage_10": {
        "title": "일반동사 의문문",
        "pattern": "Do/Does + 주어 + 동사원형?",
        "key_structures": [
          "Do I/you/we/they + [동사원형]?",
          "Does he/she/it + [동사원형]?"
        ],
        "practice_sentences": [
          {"en": "Do you like music?", "ko": "너는 음악을 좋아하니?"},
          {"en": "Do they play soccer?", "ko": "그들은 축구를 하니?"},
          {"en": "Does he eat breakfast?", "ko": "그는 아침을 먹니?"},
          {"en": "Does she watch TV?", "ko": "그녀는 TV를 보니?"},
          {"en": "Does it work?", "ko": "그것이 작동하니?"},
          {"en": "Do we study together?", "ko": "우리가 함께 공부하니?"},
          {"en": "Do I look good?", "ko": "내가 좋아 보이니?"}
        ]
      },
      
      "stage_11": {
        "title": "기본 Wh- 질문",
        "pattern": "Wh-word + do/does/be동사 + 주어 + 동사?",
        "key_structures": [
          "What do you + [동사]?",
          "Where are you?",
          "When does he + [동사]?",
          "How is she?"
        ],
        "practice_sentences": [
          {"en": "What do you do?", "ko": "너는 무엇을 하니?"},
          {"en": "Where are you from?", "ko": "너는 어디 출신이니?"},
          {"en": "When does he come?", "ko": "그는 언제 오니?"},
          {"en": "How is she?", "ko": "그녀는 어떠니?"},
          {"en": "Why are they late?", "ko": "그들은 왜 늦었니?"},
          {"en": "Who is that man?", "ko": "저 남자는 누구니?"},
          {"en": "Which book do you want?", "ko": "어떤 책을 원하니?"}
        ]
      }
    },
    
    "phase_5": {
      "title": "기초 패턴 확장 - 실생활 필수 표현",
      "description": "일상생활에서 가장 자주 사용하는 기본 패턴들",
      "stages": 4,
      "grammar_focus": "존재 표현, 소유 표현, 선호 표현, 의도 표현",
      
      "stage_12": {
        "title": "There is/There are - 존재 표현",
        "pattern": "There is/are + 명사 + 장소",
        "key_structures": [
          "There is a + [단수명사]",
          "There are + [복수명사]",
          "Is there a + [단수명사]?",
          "Are there + [복수명사]?"
        ],
        "practice_sentences": [
          {"en": "There is a book on the table", "ko": "테이블 위에 책이 있다"},
          {"en": "There are two cats in the garden", "ko": "정원에 고양이 두 마리가 있다"},
          {"en": "Is there a pen in your bag?", "ko": "너의 가방에 펜이 있니?"},
          {"en": "Are there students in the classroom?", "ko": "교실에 학생들이 있니?"},
          {"en": "There is no milk in the fridge", "ko": "냉장고에 우유가 없다"},
          {"en": "There are many people here", "ko": "여기에 사람들이 많다"},
          {"en": "Is there anyone at home?", "ko": "집에 누가 있니?"}
        ]
      },
      
      "stage_13": {
        "title": "I like ~ - 선호 표현",
        "pattern": "주어 + like/love/hate + 명사/동명사",
        "key_structures": [
          "I like + [명사]",
          "I like + [동명사ing]",
          "I don't like + [명사]",
          "Do you like + [명사]?"
        ],
        "practice_sentences": [
          {"en": "I like apples", "ko": "나는 사과를 좋아한다"},
          {"en": "We like watching movies", "ko": "우리는 영화 보는 것을 좋아한다"},
          {"en": "She likes playing piano", "ko": "그녀는 피아노 치는 것을 좋아한다"},
          {"en": "They like Korean food", "ko": "그들은 한국 음식을 좋아한다"},
          {"en": "I don't like coffee", "ko": "나는 커피를 좋아하지 않는다"},
          {"en": "Do you like chocolate?", "ko": "너는 초콜릿을 좋아하니?"},
          {"en": "He likes reading books", "ko": "그는 책 읽는 것을 좋아한다"}
        ]
      },
      
      "stage_14": {
        "title": "I have ~ - 소유 표현",
        "pattern": "주어 + have/has + 명사",
        "key_structures": [
          "I/You/We/They have + [명사]",
          "He/She/It has + [명사]",
          "Do you have + [명사]?",
          "I don't have + [명사]"
        ],
        "practice_sentences": [
          {"en": "I have a dog", "ko": "나는 개를 기른다"},
          {"en": "She has long hair", "ko": "그녀는 긴 머리를 가지고 있다"},
          {"en": "They have time", "ko": "그들은 시간이 있다"},
          {"en": "Do you have a pen?", "ko": "너는 펜을 가지고 있니?"},
          {"en": "I don't have money", "ko": "나는 돈이 없다"},
          {"en": "We have a big house", "ko": "우리는 큰 집이 있다"},
          {"en": "He has two brothers", "ko": "그는 형제가 둘 있다"}
        ]
      },
      
      "stage_15": {
        "title": "I want to ~ - 의도 표현",
        "pattern": "주어 + want + to + 동사원형",
        "key_structures": [
          "I want to + [동사원형]",
          "She wants to + [동사원형]",
          "Do you want to + [동사원형]?",
          "I don't want to + [동사원형]"
        ],
        "practice_sentences": [
          {"en": "I want to eat pizza", "ko": "나는 피자를 먹고 싶다"},
          {"en": "She wants to go home", "ko": "그녀는 집에 가고 싶어한다"},
          {"en": "They want to learn English", "ko": "그들은 영어를 배우고 싶어한다"},
          {"en": "Do you want to play soccer?", "ko": "너는 축구를 하고 싶니?"},
          {"en": "I don't want to work today", "ko": "나는 오늘 일하고 싶지 않다"},
          {"en": "We want to travel", "ko": "우리는 여행을 하고 싶다"},
          {"en": "He wants to be a doctor", "ko": "그는 의사가 되고 싶어한다"}
        ]
      }
    },
    
    "korean_learner_special_notes": {
      "critical_mistakes": [
        {
          "mistake": "주어 생략",
          "wrong": "Am student",
          "correct": "I am a student",
          "explanation": "영어는 주어 필수, 한국어처럼 생략 불가"
        },
        {
          "mistake": "be동사와 일반동사 혼용",
          "wrong": "I am go to school",
          "correct": "I go to school",
          "explanation": "be동사와 일반동사는 함께 사용 불가"
        },
        {
          "mistake": "관사 생략",
          "wrong": "I am student",
          "correct": "I am a student",
          "explanation": "가산명사 단수에는 a/an 필수"
        },
        {
          "mistake": "3인칭 단수 -s 누락",
          "wrong": "He like pizza",
          "correct": "He likes pizza",
          "explanation": "3인칭 단수 현재형에는 동사+s/es"
        }
      ]
    },
    
    "phase_6": {
      "title": "필수 기초 확장 - 실용성 완성",
      "description": "일상 대화에 필수적인 기본 표현들로 Level 1 완성",
      "stages": 4,
      "grammar_focus": "위치 표현, 관사 사용, 지시 표현, 정중한 요청",
      
      "stage_16": {
        "title": "기본 전치사 (위치) - at/in/on",
        "pattern": "주어 + be동사 + 전치사 + 장소",
        "key_structures": [
          "at + 지점 (at home, at school, at work)",
          "in + 공간 (in the room, in Korea, in the car)",
          "on + 표면 (on the table, on the wall, on TV)"
        ],
        "practice_sentences": [
          {"en": "I am at home", "ko": "나는 집에 있다"},
          {"en": "She is at school", "ko": "그녀는 학교에 있다"},
          {"en": "The book is on the table", "ko": "책이 테이블 위에 있다"},
          {"en": "He is in the room", "ko": "그는 방 안에 있다"},
          {"en": "We are at work", "ko": "우리는 직장에 있다"},
          {"en": "The cat is on the bed", "ko": "고양이가 침대 위에 있다"},
          {"en": "They are in Korea", "ko": "그들은 한국에 있다"}
        ]
      },
      
      "stage_17": {
        "title": "관사 기본 - a/an/the",
        "pattern": "관사 + 명사의 기본 규칙",
        "key_structures": [
          "a + 자음시작 단어 (a book, a car, a student)",
          "an + 모음시작 단어 (an apple, an egg, an hour)",
          "the + 특정한 것 (the book, the sun, the school)"
        ],
        "practice_sentences": [
          {"en": "I am a student", "ko": "나는 학생이다"},
          {"en": "She has an apple", "ko": "그녀는 사과를 가지고 있다"},
          {"en": "He is a teacher", "ko": "그는 선생님이다"},
          {"en": "This is an egg", "ko": "이것은 달걀이다"},
          {"en": "The sun is bright", "ko": "태양이 밝다"},
          {"en": "Where is the book?", "ko": "책이 어디에 있니?"},
          {"en": "I need a pen", "ko": "나는 펜이 필요하다"}
        ]
      },
      
      "stage_18": {
        "title": "This/That - 지시대명사",

# DaSi Backend Docker Environment Configuration
# Copy this to .env for Docker deployment

# Application Environment
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Redis Cache Configuration
REDIS_URL=redis://redis:6379

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Firebase Configuration (update with your project details)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com

# Google Cloud API Configuration
GOOGLE_APPLICATION_CREDENTIALS=/app/src/config/firebaseServiceAccountKey.json

# Speech Service Configuration
SPEECH_API_ENDPOINT=https://speech.googleapis.com/v1
TTS_API_ENDPOINT=https://texttospeech.googleapis.com/v1

# Monitoring Configuration
ENABLE_PROMETHEUS_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:80
JWT_SECRET=your-jwt-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_LEVELS=61800000
CACHE_TTL_PATTERNS=61800000
CACHE_TTL_TTS=1468800000

# Queue Configuration
QUEUE_CONCURRENCY_STT=2
QUEUE_CONCURRENCY_LLM=2
QUEUE_CONCURRENCY_TTS=2
QUEUE_RATE_LIMIT_PER_SECOND=5
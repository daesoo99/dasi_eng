{
  "level_1_basic_statements": {
    "description": "레벨 1: 기본 문장 구조 (be동사, 일반동사 현재형)",
    "be_verb_patterns": [
      {
        "pattern": "I am + 형용사/명사",
        "examples": [
          "I am happy",
          "I am tired", 
          "I am ready",
          "I am a student"
        ],
        "source": "스티브 잡스: I am honored to be with you"
      },
      {
        "pattern": "You are + 형용사/명사",
        "examples": [
          "You are right",
          "You are my friend",
          "You are busy"
        ]
      }
    ],
    "present_tense_patterns": [
      {
        "pattern": "I + 동사원형",
        "examples": [
          "I work",
          "I study", 
          "I eat",
          "I go"
        ],
        "source": "문학적: I use it to go"
      },
      {
        "pattern": "I want to + 동사원형",
        "examples": [
          "I want to go",
          "I want to eat",
          "I want to sleep"
        ],
        "source": "스티브 잡스: I want to tell you"
      }
    ],
    "demonstratives": [
      {
        "pattern": "That's + 명사/형용사",
        "examples": [
          "That's good",
          "That's my book",
          "That's wrong"
        ],
        "source": "애니메이션: That's anger"
      }
    ],
    "commands": [
      {
        "pattern": "동사원형 (명령문)",
        "examples": [
          "Come here",
          "Sit down",
          "Listen"
        ],
        "source": "문학적: Come in"
      },
      {
        "pattern": "Let's + 동사원형",
        "examples": [
          "Let's go home",
          "Let's eat lunch",
          "Let's try it"
        ],
        "source": "애니메이션: Let's go check it out"
      }
    ]
  }
}